@model List<Model.EF.User>
@{
    ViewBag.Title = "User Management";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@section header{ User Management}
@section breadcrumb{
    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
    <li class="breadcrumb-item active">User Management</li>
}

<div class="card-header">
    <i class="fas fa-table mr-1"></i>
    List of Users
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>BirthDay</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Address</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>FullName</th>
                    <th>BirthDay</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Address</th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                <tr id="row_@item.UserId">
                    <td>@item.UserName</td>
                    <td>@item.UserBirthDay.ToString("dd/MM/yyyy")</td>
                    <td>@item.UserEmail</td>
                    <td>@item.UserMobile</td>
                    <td>@item.UserAddress</td>
                    <td>@Html.ActionLink("Detail", "DetailUser", new { id = item.UserId })</td>
                    <td>
                        @Ajax.ActionLink("Delete", "DeleteUser", new { id = item.UserId }, new AjaxOptions
                    {
                       Confirm = "Are you sure to delete?",
                       OnComplete = "$('#row_" + @item.UserId + "').remove()",
                       HttpMethod = "Delete"
                    })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
