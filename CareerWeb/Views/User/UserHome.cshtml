@model List<Model.EF.OfferJob>
@using Model.Dao
@{
    ViewBag.Title = "UserHome";
    Layout = "~/Views/Shared/LayoutForUser.cshtml";
    var OfferJobDao = new OfferJobDao();
    var OfferJobSkillDao = new OfferJobSkillDao();
    var EnterpriseDao = new EnterpriseDao();
    var SalaryDao = new SalaryDao();
}
@section cssInsert{
    <link href="~/Assets/Client/Css/User/UserHome.css" rel="stylesheet" />
}
<div class="banner">


    <div class="title">
        Go further. Dream Bigger. Work better
    </div>
    <form>
        <input type="text" name="jobBrowser" class="jobBrowser" style="height: 3em; margin-left: 7%;"
               placeholder="Job Title, positon, skill...">
    </form>
    <form>
        <input class="jobBrowser" minlength="2" style="height: 3em;" placeholder="All career" name="OfferMajor" list="OfferMajor" id="as" />
        <datalist id="OfferMajor" style="height:5.1em">
            @foreach (var item in ViewBag.ListJobMain)
            {
                <option value="@item.JobName" data-id="@item.JobID" />
            }
        </datalist>
    </form>
    <form>
        <input list="ListArea" class="jobBrowser" style="height: 3em;"
               placeholder="All state" id="bs">
        <datalist id="ListArea">
            @foreach (var item in ViewBag.ListArea)
            {
                <option value="@item.NameArea" data-id="@item.AreaId" />
            }

        </datalist>

    </form>
    <div>
        <input type="submit" id="findIcon" class="submit-box" value="Tìm kiếm" onclick="search()" />
    </div>
    <div class="criterialSelected">
        <form action="">
            <input list="Salary" class="select-box select-box1" placeholder="Mức lương" id="cs" />
            <datalist id="Salary">
                @foreach (var item in ViewBag.ListSalary)
                {
                    <option value="@item.Amount" data-id="@item.ID" />
                }
            </datalist>
            <input list="Position" class="select-box select-box2" placeholder="Trình độ nghề nghiệp" id="ds" />
            <datalist id="Position">
                @foreach (var item in ViewBag.ListPositionEmployee)
                {
                    <option value="@item.NamePosition" data-id="@item.ID" />

                }
            </datalist>
            <input list="Experience" class="select-box select-box3" placeholder="Kinh nghiệm" id="es" />
            <datalist id="Experience">
                @foreach (var item in ViewBag.ListExperience)
                {
                    <option value=" @item.Time" data-id="@item.ID" />

                }
            </datalist>

            <input list="Lever" class="select-box select-box4" placeholder="Trình độ" id="fs" />
            <datalist id="Lever">

                @foreach (var item in ViewBag.ListLevelLearning)
                {
                    <option value="@item.NameLevel" data-id="@item.ID" />

                }
            </datalist>
            <button id="clearAll" style="font-weight:bold; background-color: chocolate" class="select-box select-box4" onclick="reload();">Xóa điều kiện tìm</button>
        </form>
    </div>
    <div class="container">
        <div class="serif">
            CareerWeb là dịch vụ tuyển dụng
            <a class="link" href="SearchJobForUser?"> tìm việc làm</a>,
            <a class="link" href=""> đăng tin tuyển dụng</a>
            và <a class="link" href="~/Employee/SearchCandidate?"> tìm hồ sơ xin việc</a> theo khu vực, lĩnh vực, kỹ năng và nhiều điều kiện khác
        </div>
    </div>
    </form>
</div>
