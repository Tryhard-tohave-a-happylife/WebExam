<div style="height:auto; width:62%;position: relative; margin-left: 14%; margin-bottom:5%; margin-top: -1%">
    <vr></vr>
    @foreach (var item in ViewBag.ListOffer)
    {

        var linkImage = item.OfferImage;

        <div class="job-box">
            <img class="box-img" src="@linkImage" ; />
            <div style="width: 50%; margin-left:0; margin-top: 2%; font-size:13px; text-align:left; padding-left: 6%;float: left">
                <a href="/OfferDetail/@item.OfferID" style="text-decoration:none"><div style="color:red; font-size: 15px">@item.OfferName </div></a><br />
                <b class="fa fa-building-o"></b><b> Công ty: </b> <a>@(EnterpriseDao.EnterpriseName(item.EnterpriseID))</a><br /><br />
                <b class="fa fa-map-pin"></b> <b>Nơi làm việc:</b> <a>@item.JobAddress</a><br /><br />
                <b class="fa fa-calendar-o"></b> <b>Hạn nộp: </b> <a>@item.OfferLimitDate</a>
            </div>


            <div style="width: 50%; margin-left:50%; margin-top: 5%; font-size:13px; text-align:left; padding-left: 6%;">
                <b class="fa fa-dollar"></b> <b>Lương: </b> <a> @(SalaryDao.AmountSalary(item.OfferSalary)) USD</a><br /><br />
                <b class="fa fa-gift"></b> <b>Thưởng </b> <a>@(item.Bonus != null ? item.Bonus : "0 USD")</a><br />

            </div>
        </div>
    }
</div>




